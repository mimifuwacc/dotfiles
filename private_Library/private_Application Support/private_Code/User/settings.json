{
  // workbench
  "workbench.colorTheme": "GitHub Dark",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.activityBar.location": "default",
  "workbench.editor.editorActionsLocation": "titleBar",
  "workbench.editorAssociations": {
    "*.pdf": "latex-workshop-pdf-hook"
  },

  // auto save
  "files.autoSave": "afterDelay",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,

  // editor
  "editor.tabSize": 2,
  "editor.fontFamily": "'Calex Code JP', 'Source Han Code JP'",
  "terminal.integrated.fontFamily": "'Calex Code JP', 'Hack Nerd Font'",
  "terminal.integrated.fontSize": 20,
  "terminal.integrated.fontWeight": "400",
  "editor.fontWeight": "normal",
  "editor.suggestSelection": "first",
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "Cargo.toml": "Cargo.lock",
    "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata",
    "*.dart": "${capture}.g.dart",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "window.customTitleBarVisibility": "windowed",
  "prettier.resolveGlobalModules": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "terminal.external.linuxExec": "/usr/bin/kitty",
  "terminal.explorerKind": "both",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "javascript.updateImportsOnFileMove.enabled": "never",
  "task.allowAutomaticTasks": "on",
  "editor.fontSize": 20,
  "security.workspace.trust.enabled": false,
  "files.associations": {
    "*.css": "tailwindcss"
  },

  // copilot
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "*.txt": false
    // "*.md": false
  },
  "github.copilot.nextEditSuggestions.enabled": true,

  // latex
  "[latex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "James-Yu.latex-workshop",
    "editor.unicodeHighlight.allowedCharacters": {
      "，": true,
      "．": true,
      "！": true,
      "？": true,
      "［": true,
      "］": true,
      "｛": true,
      "｝": true,
      "＜": true,
      "＞": true
    }
  },
  "latex-workshop.intellisense.package.enabled": true,
  "latex-workshop.formatting.latex": "latexindent",
  "latex-workshop.formatting.latexindent.path": "/opt/homebrew/bin/latexindent",
  "latex-workshop.formatting.latexindent.args": [
    "-c",
    "%DIR%/",
    "%TMPFILE%",
    "-l",
    "/Users/mimi/.config/latexindent/latexindentrc.yaml",
    "-r"
  ],
  "latex-workshop.latex.recipe.default": "latexmk",
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": ["latexmk"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-pdfdvi",
        "-synctex=1",
        "--shell-escape",
        "-interaction=nonstopmode",
        "%DOC%",
        "-f"
      ]
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": ["%DOCFILE%"]
    }
  ],
  "latex-workshop.view.pdf.viewer": "tab",

  // python
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },

  // c/c++
  "[c]": {
    "editor.formatOnSaveMode": "file",
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[cpp]": {
    "editor.formatOnSaveMode": "file",
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },

  // next.js
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },

  "git.autofetch": true,
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },

  "redhat.telemetry.enabled": true,
  "accessibility.signals.terminalBell": {
    "sound": "on"
  },
  "haskell.manageHLS": "GHCup",
  "biome.suggestInstallingGlobally": false,
  "python.defaultInterpreterPath": "/Users/mimi/.local/share/mise/shims/python",
  "workbench.editor.empty.hint": "hidden",
  "githubPullRequests.pullBranch": "never",
  "background.enabled": true,
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },

  "remote.autoForwardPorts": false,
  "terminal.integrated.accessibleViewPreserveCursorPosition": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "editor.wordWrap": "wordWrapColumn",
  "gitlens.views.commitDetails.files.layout": "tree"
}
